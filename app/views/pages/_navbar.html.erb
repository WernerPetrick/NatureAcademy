<!-- app/views/layouts/_navbar.html.erb -->
<header class="bg-white">
  <div class="mx-auto max-w-screen-xl px-4 sm:px-6 lg:px-8">
    <div class="flex h-16 items-center justify-between">
      <div class="md:flex md:items-center md:gap-12">
        <a class="block text-teal-600" href="#">
          <span class="sr-only">Home</span>
          <%= image_tag "academic-cap.png", style: "width: 55px" %>
        </a>
      </div>

      <div class="hidden md:block">
        <nav aria-label="Global">
          <ul class="flex items-center gap-6 text-sm">
            <% if @navbar_content && @navbar_content['items'] %>
              <% @navbar_content['items'].each do |item| %>
                <% if item['title'] != "Register" && item['title'] != "Login" %>
                  <li>
                    <a class="text-gray-500 transition hover:text-gray-500/75" href="<%= item['navigationItemUrl'] %>">
                      <%= item['title'] %>
                    </a>
                  </li>
                <% end %>
              <% end %>
            <% else %>
              <li><p>Navbar content is unavailable.</p></li>
            <% end %>
          </ul>
        </nav>
      </div>

      <div class="flex items-center gap-4">
        <% if @navbar_content && @navbar_content['items'] %>
          <% @navbar_content['items'].each do |item| %>
            <% if item['title'] == "Login" %>
              <div class="sm:flex sm:gap-4">
                <%= link_to "Login", item['navigationItemUrl'], class: "rounded-md bg-teal-600 px-5 py-2.5 text-sm font-medium text-white shadow" %>
              </div>
            <% elsif item['title'] == "Register" %>
              <div class="hidden sm:flex">
                <%= link_to "Register", item['navigationItemUrl'], class: "rounded-md bg-gray-100 px-5 py-2.5 text-sm font-medium text-teal-600" %>
              </div>
            <% end %>
          <% end %>
        <% end %>

        <div class="block md:hidden">
          <button class="rounded bg-gray-100 p-2 text-gray-600 transition hover:text-gray-600/75">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="size-5"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
              stroke-width="2"
            >
              <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
          </button>
        </div>
      </div>
    </div>
  </div>
</header>
